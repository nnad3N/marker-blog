---
import type { Post } from "payload/generated-types";
import PayloadImage from "@/components/PayloadImage.astro";

type Props = Post;

const { title, image, content_html } = Astro.props;
---

<article class="mx-auto w-full max-w-screen-lg">
  <h1
    class="mx-auto max-w-lg text-balance pb-8 text-center font-display text-3xl font-black md:max-w-screen-md md:text-5xl lg:pb-16 lg:text-6xl"
  >
    {title}
  </h1>
  <PayloadImage image={image} />
  <div
    class="prose hover:prose-a:bg-yellow-200 prose-lg prose-img:mx-auto mx-auto py-4 lg:py-8"
    set:html={content_html}
  />
</article>
